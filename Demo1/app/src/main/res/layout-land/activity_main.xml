<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.pedrow10.demo1.MainActivity">

    <TextView
        android:id="@+id/txtview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="2dp"
        android:gravity="right"
        android:padding="2dp"
        android:text=""
        android:textSize="40dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#545658"
            android:columnCount="3">


            <Button
                android:id="@+id/digit7"
                android:layout_width="wrap_content"
                android:onClick="obtenerDigito"
                android:text="@string/btn7" />

            <Button
                android:id="@+id/digit8"
                android:layout_width="wrap_content"
                android:onClick="obtenerDigito"
                android:text="@string/btn8" />

            <Button
                android:id="@+id/digit9"
                android:layout_width="wrap_content"
                android:onClick="obtenerDigito"
                android:text="@string/btn9" />


            <Button
                android:id="@+id/digit4"
                android:layout_width="wrap_content"
                android:onClick="obtenerDigito"
                android:text="@string/btn4" />

            <Button
                android:id="@+id/digit5"
                android:onClick="obtenerDigito"
                android:layout_width="wrap_content"
                android:text="@string/btn5" />

            <Button
                android:id="@+id/digit6"
                android:layout_width="wrap_content"
                android:onClick="obtenerDigito"
                android:text="@string/btn6" />



            <Button
                android:id="@+id/digit1"
                android:layout_width="wrap_content"
                android:onClick="obtenerDigito"
                android:text="@string/btn1" />

            <Button
                android:id="@+id/digit2"
                android:layout_width="wrap_content"
                android:onClick="obtenerDigito"
                android:text="@string/btn2" />

            <Button
                android:id="@+id/digit3"
                android:layout_width="wrap_content"
                android:onClick="obtenerDigito"
                android:text="@string/btn3" />


            <Button
                android:id="@+id/digit."
                android:layout_width="wrap_content"
                android:onClick="obtenerDigito"
                android:text="@string/btnpunto" />

            <Button
                android:id="@+id/digit0"
                android:layout_width="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:onClick="obtenerDigito"
                android:text="@string/btn0" />


            <Button
                android:id="@+id/digitigual"
                android:layout_width="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:text="@string/btnigual" />

        </GridLayout>


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#a3a4a6"
            android:columnCount="2">

            <Button
                android:id="@+id/digitmas"
                android:layout_width="wrap_content"
                android:onClick="obtenerDigito"
                android:text="@string/btnsuma" />
            <Button
                android:id="@+id/digitdel"
                android:layout_width="wrap_content"
                android:text="@string/btndel"
                />
            <Button
                android:id="@+id/digitmenos"
                android:layout_width="wrap_content"
                android:onClick="obtenerDigito"
                android:text="@string/btnresta" />

            <Button


                android:layout_width="wrap_content"
                android:text="" />


            <Button
                android:id="@+id/digitpor"
                android:layout_width="wrap_content"
                android:onClick="obtenerDigito"
                android:text="@string/btnmultiplicacion" />
            <Button


                android:layout_width="wrap_content"
                android:text="" />
            <Button
                android:id="@+id/digitdividido"
                android:layout_width="wrap_content"
                android:onClick="obtenerDigito"
                android:text="@string/btndivision" />

            <Button
                android:id="@+id/digitclear"
                android:layout_width="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:text="@string/btnc"
                android:onClick="clear"/>
        </GridLayout>


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#0fe48f"
            android:columnCount="2">

            <Button
                android:id="@+id/digitseno"
                android:layout_width="wrap_content"
                android:onClick="funcionEspecial"
                android:text="@string/btnseno" />
            <Button
                android:id="@+id/digitcoseno"
                android:layout_width="wrap_content"
                android:onClick="funcionEspecial"
                android:text="@string/btncoseno"
                />
            <Button
                android:id="@+id/digittangente"
                android:layout_width="wrap_content"
                android:onClick="funcionEspecial"
                android:text="@string/btntangente" />


            <Button
                android:id="@+id/digitraiz"
                android:layout_width="wrap_content"
                android:onClick="funcionEspecial"
                android:text="@string/btnraiz" />

            <Button
                android:id="@+id/digitpotencia"
                android:layout_width="wrap_content"
                android:onClick="obtenerDigito"
                android:text="@string/btnpotencia" />
        </GridLayout>

    </LinearLayout>
</LinearLayout>