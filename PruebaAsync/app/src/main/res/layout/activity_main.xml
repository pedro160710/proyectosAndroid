<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pedrow10.pruebaasync.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maximo" />

    <EditText
        android:id="@+id/txtMaximo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/buttonContarSin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contarSin"
        android:onClick="generarConteo"
        />
    <Button
        android:id="@+id/buttonContarAsin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contarAsin"
        android:onClick="generarConteoAsync"
        />

    <TextView
        android:id="@+id/txtConteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v:"
        />

</LinearLayout>
